@* Razor Page for Deleting*@
@page
@model HeartDiseaseWebApp.Pages.Hearts.DeleetModel
@{
}

<br>
<h2>Delete Heart</h2>

@if (Model.errorMessage.Length > 0)
{
    <div>@Model.errorMessage</div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.heart.Id" />
    <table>
        <tr>
            <td>Description</td>
            <td>@Model.heart.Description</td>
        </tr>
        <tr>
            <td>IsCompleted</td>
            <td>@Model.heart.IsCompleted</td>
        </tr>
        <tr>
            <td>Age</td>
            <td>@Model.heart.age</td>
        </tr>
    </table>
    <p></p>

    <input type="submit" value="Delete" class="btn btn-primary" />
</form>
